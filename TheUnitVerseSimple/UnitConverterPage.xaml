<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheUnitVerseSimple.UnitConverterPage"
             Title="Unit Converter"
             BackgroundColor="#1a1a2e"
             xmlns:local="clr-namespace:TheUnitVerseSimple"
>

    <VerticalStackLayout Padding="20">
        <local:CustomNavBar />
        <Label Text="Unit Converter" FontSize="24" TextColor="White"/>
        <Picker x:Name="UnitTypePicker" Title="Select Unit Type"/>
        <Picker x:Name="FromUnitPicker" Title="From"/>
        <Picker x:Name="ToUnitPicker" Title="To"/>
        <Entry x:Name="InputEntry" Placeholder="Enter value" Keyboard="Numeric"/>
        <Button Text="Convert" Clicked="OnConvertClicked"/>
        <Label x:Name="ResultLabel" FontSize="18" TextColor="White"/>
    </VerticalStackLayout>
</ContentPage>
