<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheUnitVerseSimple.HistoryPage"
             Title="History"
             BackgroundColor="#000011"
             xmlns:local="clr-namespace:TheUnitVerseSimple"
>

    <VerticalStackLayout Padding="20">
        <local:CustomNavBar />
        <Label Text="Conversion History"
               FontSize="24"
               TextColor="White"
               HorizontalOptions="Center" />

        <CollectionView x:Name="HistoryView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="#1f1f2f"
                           Padding="10"
                           Margin="5"
                           CornerRadius="10">
                        <Label Text="{Binding}" TextColor="White" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
