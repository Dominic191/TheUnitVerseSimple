<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="TheUnitVerseSimple.CustomNavBar"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="NavBar">

    <Grid BackgroundColor="Black" Padding="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Button Text="Home" Grid.Column="0" TextColor="White" Clicked="Home_Clicked" />
        <Label Text="The Unit-verse" Grid.Column="1"
               HorizontalOptions="Center" VerticalOptions="Center"
               FontSize="20" TextColor="White" />
        <Button Text="Currency" Grid.Column="2" TextColor="White" Clicked="Currency_Clicked" />
        <Button Text="History" Grid.Column="3" TextColor="White" Clicked="History_Clicked" />
    </Grid>
</ContentView>
